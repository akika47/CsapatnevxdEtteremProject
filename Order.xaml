                Grid.Row="1"
                VerticalAlignment="center"
                Height="40"
                Width="175"
                Orientation="Horizontal">
                    <Button Click="IncreaseDecrease"
                Width="40"
                Height="40"
                FontSize="30"
                Content="-">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                            Value="10" />
                            </Style>
